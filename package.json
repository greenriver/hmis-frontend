{
  "name": "hmis-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.2.0"
  },
  "scripts": {
    "dev": "DEBUG=vite:proxy vite --clearScreen false",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix --ext js,ts,jsx,tsx --ignore-path .gitignore .",
    "lint:check": "eslint --ext js,ts,jsx,tsx --ignore-path .gitignore .",
    "test": "NODE_ENV=test jest",
    "cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'hmis.dev.test'",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix --ignore-path .gitignore"
    ],
    "*": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.8",
    "@date-io/date-fns": "^2.14.0",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.0",
    "@mui/system": "^5.9.0",
    "@mui/x-date-pickers": "^5.0.0-beta.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.2",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.28.0",
    "graphql": "^16.5.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.4.0",
    "typescript": "^4.4.2",
    "vite": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/dom": "^8.13.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0"
  }
}
